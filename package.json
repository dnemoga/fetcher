{
  "name": "@dnemoga/fetcher",
  "version": "1.1.0",
  "description": "A minimalistic library built around the native Fetch API with zero dependencies. Intended to use only in modern web browsers.",

  "keywords": [
    "http-client",
    "fetch",
    "promise",
    "typescript",
    "javascript"
  ],

  "license": "MIT",

  "author": "Dmytro Nemoga <dnemoga@gmail.com>",
  "repository": "https://github.com/dnemoga/fetcher",
  "bugs": "https://github.com/dnemoga/fetcher/issues",

  "files": [
    "lib/*"
  ],

  "exports": {
    ".": "./lib/fetcher.js"
  },

  "scripts": {
    "build": "tsc --project tsconfig.src.json --rootDir src --outDir lib --declaration",
    "build:watch": "npm run build -- --watch",

    "lint": "eslint src",
    "lint:ci": "npm run lint -- --format @microsoft/eslint-formatter-sarif --output-file results/lint.sarif",

    "test": "jest src",
    "test:watch": "npm run test -- --watch"
  },

  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "3.0.0",
    "@types/jest": "28.1.7",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.35.1",
    "eslint": "8.22.0",
    "jest": "28.1.3",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}

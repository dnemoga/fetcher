{
  "name": "@dnemoga/fetcher",
  "version": "1.0.2",
  "description": "A minimalistic library built around the native Fetch API with zero dependencies. Intended to use only in modern web browsers.",

  "keywords": [
    "http-client",
    "fetch",
    "promise",
    "typescript",
    "javascript"
  ],

  "license": "MIT",

  "author": "Dmytro Nemoga <dnemoga@gmail.com>",
  "repository": "https://github.com/dnemoga/fetcher",
  "bugs": "https://github.com/dnemoga/fetcher/issues",

  "files": [
    "lib/*"
  ],

  "exports": {
    ".": "./lib/fetcher.js"
  },

  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "build:clean": "npm run build -- --clean",

    "lint": "eslint src",
    "lint:ci": "npm run lint -- --format @microsoft/eslint-formatter-sarif --output-file results/lint.sarif"
  },

  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "3.0.0",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "eslint": "8.22.0",
    "typescript": "4.7.4"
  }
}

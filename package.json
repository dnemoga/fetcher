{
  "name": "@dnemoga/fetcher",
  "version": "1.2.1",
  "description": "A minimalistic library built around the native Fetch API with zero dependencies. Intended to use only in modern web browsers.",

  "type": "module",

  "keywords": [
    "http-client",
    "fetch",
    "promise",
    "typescript",
    "javascript"
  ],

  "license": "MIT",

  "author": "Dmytro Nemoga <dnemoga@gmail.com>",
  "repository": "https://github.com/dnemoga/fetcher",
  "bugs": "https://github.com/dnemoga/fetcher/issues",

  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],

  "exports": {
    ".": "./lib/index.js"
  },

  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "npm run build -- --watch",

    "lint": "eslint src",
    "lint:ci": "npm run lint -- --format @microsoft/eslint-formatter-sarif --output-file lint.sarif",

    "test": "jest src",
    "test:watch": "npm run test -- --watch"
  },

  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "3.0.0",
    "@types/jest": "29.2.2",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.42.1",
    "eslint": "8.27.0",
    "jest": "29.3.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  }
}

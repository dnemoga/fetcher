{
  "name": "@dnemoga/fetcher",
  "version": "1.3.0",
  "description": "A minimalistic library built around the native Fetch API with zero dependencies.",

  "type": "module",

  "keywords": [
    "http-client",
    "fetch",
    "promise",
    "typescript",
    "javascript"
  ],

  "license": "MIT",

  "author": "Dmytro Nemoga <dnemoga@gmail.com>",
  "repository": "https://github.com/dnemoga/fetcher",
  "bugs": "https://github.com/dnemoga/fetcher/issues",

  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],

  "scripts": {
    "build": "tsc --project tsconfig.build.json --outDir lib",
    "build:watch": "npm run build -- --watch",

    "lint": "eslint src",
    "lint:ci": "npm run lint -- --format @microsoft/eslint-formatter-sarif --output-file lint.sarif",

    "test": "jest src",
    "test:watch": "npm run test -- --watch"
  },

  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "3.0.0",
    "@types/jest": "29.5.5",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },

  "engines": {
    "node": ">=18"
  }
}
